from pptx import Presentation
from pptx.util import Inches
from pptx.dml.color import RGBColor

def create_table_with_borders(slide, left, top, width, height):
    # Add a table with 7 columns and 10 rows
    table = slide.shapes.add_table(rows=10, cols=7, left=left, top=top, width=width, height=height).table
    
    # Apply black borders to all cells
    for row in table.rows:
        for cell in row.cells:
            # Set border width for all sides
            cell.border_left.width = Inches(0.01)
            cell.border_top.width = Inches(0.01)
            cell.border_right.width = Inches(0.01)
            cell.border_bottom.width = Inches(0.01)

            # Set border color to black
            cell.border_left.color.rgb = RGBColor(0, 0, 0)
            cell.border_top.color.rgb = RGBColor(0, 0, 0)
            cell.border_right.color.rgb = RGBColor(0, 0, 0)
            cell.border_bottom.color.rgb = RGBColor(0, 0, 0)

    return table

# Create a presentation and add a slide
prs = Presentation()
slide = prs.slides.add_slide(prs.slide_layouts[5])

# Define the table position and size
left = Inches(1)
top = Inches(1.5)
width = Inches(6)
height = Inches(3)

# Create the table with borders
create_table_with_borders(slide, left, top, width, height)

# Save the presentation
prs.save("table_with_borders.pptx")
